<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="403" Width="704">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*" />
            <RowDefinition Height="50*" />
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="접속" HorizontalAlignment="Left" Height="25" Margin="5" VerticalAlignment="Top" Width="100" Click="Button_Click"/>
        <ListView Grid.Row="0" Margin="5,35,5,5" x:Name="AccountList" SelectionChanged="AccountList_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Num" Width="120" DisplayMemberBinding="{Binding Num}"  ></GridViewColumn>
                    <GridViewColumn Header="Balance" Width="120" DisplayMemberBinding="{Binding Balance}" ></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>



        <Button Grid.Row="1" Content="TEST" HorizontalAlignment="Left" Height="25" Margin="5" VerticalAlignment="Top" Width="100"  />
        <!--<ListView Grid.Row="1" Margin="5,35,5,5" x:Name="AccountList2"  SelectionChanged="AccountList_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Num" Width="120" DisplayMemberBinding="{Binding Num}"  ></GridViewColumn>
                    <GridViewColumn Header="Balance" Width="50" DisplayMemberBinding="{Binding Balance}" ></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>-->



    </Grid>

</Window>
